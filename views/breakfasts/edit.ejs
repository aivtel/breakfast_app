<% include ../partials/header %>

<div class="container">
    <div class="text-center">
        <h1 style="text-align: center">Edit <%= breakfast.name %>!</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/breakfasts/<%= breakfast._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" value="<%= breakfast.name %>" name="breakfast[name]">   
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= breakfast.image %>" name ="breakfast[image]">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="text" placeholder="location" name ="breakfast[location]">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="number" value="<%= breakfast.price %>" name ="breakfast[price]">
                </div>
                <div class="form-group">
                    <textarea required class="form-control" type="text" name ="breakfast[description]"><%= breakfast.description %></textarea>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/breakfasts">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>